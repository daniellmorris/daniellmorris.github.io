---
import Layout from './Layout.astro';

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <article class="max-w-4xl mx-auto">
    <div class="mb-8">
      <h1 class="text-4xl font-bold mb-4">{frontmatter.title}</h1>
      <div class="flex items-center text-gray-400 mb-4">
        <span class="text-sm">{new Date(frontmatter.date).toLocaleDateString()}</span>
        {frontmatter.tags && (
          <div class="ml-4 flex gap-2">
            {frontmatter.tags.map(tag => (
              <span class="bg-gray-700 text-gray-300 px-2 py-1 rounded-full text-sm">
                {tag}
              </span>
            ))}
          </div>
        )}
      </div>
    </div>
    <div class="prose prose-invert max-w-none markdown-content bg-gray-800 p-8 rounded-lg shadow-md border border-gray-700">
      <slot />
    </div>
  </article>
</Layout>
