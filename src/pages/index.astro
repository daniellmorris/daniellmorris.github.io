---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Dan Morris - Software Engineer">
  <div class="min-h-screen">
    <div class="text-center py-20 bg-gradient-to-r from-blue-900 to-purple-900 rounded-lg shadow-xl mb-12">
      <h1 class="text-5xl font-bold mb-4">Dan Morris</h1>
      <h2 class="text-3xl mb-2">Software Engineer</h2>
      <p class="text-xl mb-2">Backend & Frontend</p>
      <p class="text-xl">Architect</p>
      <div class="mt-8">
        <a href="mailto:dan@daniellmorris.com" class="bg-blue-600 text-white px-6 py-3 rounded-full font-semibold hover:bg-blue-700 transition-colors">
          Get in Touch
        </a>
      </div>
    </div>

    <div class="grid md:grid-cols-2 gap-8 mb-12">
      <div class="bg-gray-800 p-6 rounded-lg shadow-md border border-gray-700">
        <h3 class="text-2xl font-bold mb-4 text-blue-400">Expertise</h3>
        <ul class="space-y-2 text-gray-300">
          <li>✓ Full-Stack Development</li>
          <li>✓ System Architecture</li>
          <li>✓ Microservices</li>
          <li>✓ Cloud Solutions</li>
          <li>✓ DevOps & CI/CD</li>
        </ul>
      </div>

      <div class="bg-gray-800 p-6 rounded-lg shadow-md border border-gray-700">
        <h3 class="text-2xl font-bold mb-4 text-purple-400">Recent Projects</h3>
        <ul class="space-y-2 text-gray-300">
          <li>🏆 Rewards Engine for Theme Parks</li>
          <li>📊 Analytics Platform</li>
          <li>🚀 Scalable Microservice Platform</li>
          <li>🎬 OTT Media Pipeline</li>
        </ul>
      </div>
    </div>

    <div class="bg-gray-800 p-8 rounded-lg shadow-md border border-gray-700 mb-12">
      <h3 class="text-2xl font-bold mb-4 text-blue-400">Industries I've Worked With</h3>
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
        <div class="text-center p-4">
          <div class="text-xl mb-2">🎬</div>
          <div class="text-gray-300">Audio/Visual</div>
        </div>
        <div class="text-center p-4">
          <div class="text-xl mb-2">🎡</div>
          <div class="text-gray-300">Themed Entertainment</div>
        </div>
        <div class="text-center p-4">
          <div class="text-xl mb-2">👔</div>
          <div class="text-gray-300">Fashion</div>
        </div>
      </div>
    </div>
  </div>
</Layout>
